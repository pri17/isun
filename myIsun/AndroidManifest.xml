<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myisun"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
         >
        <activity
            android:name="com.example.myisun.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.myisun.showNewsList"></activity>
        <activity android:name="com.example.myisun.forgetPw"></activity>
        <activity android:name="com.example.myisun.successSent"></activity>
        <activity android:name="com.example.myisun.register"></activity>
        
    </application>
    
    
 <!-- add permission of access Internet -->  
    <uses-permission android:name="android.permission.INTERNET"/>  

</manifest>
